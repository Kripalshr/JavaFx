<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.loginpage.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label>User Name</Label>
        <TextField fx:id="userName" />
        <Label>Password</Label>
        <PasswordField fx:id="password" />
        <Button onAction="#login">Login</Button>
        <Label fx:id="welcomeText"></Label>
    </children>
</VBox>
